<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_three"
    android:orientation="vertical"
    >

    <include layout="@layout/act_title"/>

    <LinearLayout
        android:id="@+id/ll_production"
        android:layout_width="match_parent"
        android:layout_height="@dimen/production_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/product_size"
            android:layout_height="@dimen/product_size"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/gongyingshang_three"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/fengexian_three"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/tv_provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="供应商"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/tv_provider_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="提示:原材料入库票证信息"
                android:textColor="@color/text_color_black_small"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/jiantouhui"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_storage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/production_height"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/product_size"
            android:layout_height="@dimen/product_size"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/cangkutaizhang_three"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/fengexian_three"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仓库台账"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/tv_account_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="提示:生产成品入库/销售出库票证信息"
                android:textColor="@color/text_color_black_small"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/jiantouhui"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_disqualification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/production_height"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/product_size"
            android:layout_height="@dimen/product_size"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/buhegechanpin_three"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/fengexian_three"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/tv_no_hege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不合格临期产品"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/tv_no_hege_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="提示:检验不合格/临期产品处理信息"
                android:textColor="@color/text_color_black_small"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/jiantouhui"/>
    </LinearLayout>

</LinearLayout>
