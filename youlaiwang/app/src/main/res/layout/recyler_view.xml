<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="35dp">


        <TextView
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:id="@+id/postMoney"
            android:text="邮费"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/minPay"
            android:layout_toLeftOf="@id/postMoney"
            android:text="满100免邮费"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <CheckBox
            android:background="@drawable/gouwu"
            android:button="@null"
            android:gravity="center_vertical"
            android:id="@+id/isSelectedAll"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:text="店铺名称"
            android:layout_marginLeft="10dp"
            android:id="@+id/shopName"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@id/isSelectedAll"
            android:layout_toLeftOf="@id/minPay"
            android:drawableLeft="@mipmap/dingdanxiangqing_dianpu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/view_reclyer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>