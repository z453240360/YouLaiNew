<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/margin_top"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_biaoji"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_top"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:background="@mipmap/shijianzhou"/>

        <TextView
            android:id="@+id/tv_time_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="2016"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_top"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:background="@mipmap/shijianzhou"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4-18"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"/>

                <View
                    android:id="@+id/view_line"
                    android:layout_width="1dp"
                    android:layout_height="22dp"
                    android:background="@mipmap/shijianzhou"
                    android:visibility="gone"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:background="@mipmap/shijianzhou"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_top"
            android:layout_weight="1"
            android:background="@drawable/rectangle_shape_green">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/margin_top">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="粮食"
                        android:textColor="@color/green"
                        android:textSize="@dimen/text_size_16"/>

                    <View
                        android:id="@+id/view_line_shuxian"
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_top"
                        android:background="@android:color/darker_gray"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_top"
                        android:singleLine="true"
                        android:text="红豆一10kg"
                        android:textColor="@color/orange_back"
                        android:textSize="@dimen/text_size_16"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_supplier_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top"
                    android:singleLine="true"
                    android:text="汇源集团有限公司"
                    android:textColor="@color/black_simple"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_store_photo"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@mipmap/suoluetu"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
