<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >

    <LinearLayout
        android:id="@+id/dd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp84"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp61"
            android:layout_height="@dimen/dp56"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp56"
                android:layout_gravity="center"

                android:src="@drawable/sta">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:id="@+id/xin"
                    android:layout_width="14dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="14dp"
                    android:background="@color/dongdong2"
                    android:text="新"
                    android:textColor="#fff"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="新西兰红苹果"
                    android:textColor="#444"
                    android:textSize="@dimen/dp14" />

                <LinearLayout
                    android:id="@+id/ll_xuanzhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_xuanquguige"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选规格"
                        android:textColor="#a8a8a8"
                        android:textSize="@dimen/dp10" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/xiala">
                    </ImageView>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="5dp"
                android:background="#50dddddd"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cuxiao"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:background="@color/dongdong"
                            android:gravity="center"
                            android:text="促"
                            android:textColor="#fff"
                            android:textSize="10sp" />
                        <TextView
                            android:layout_marginLeft="2dp"
                            android:id="@+id/jiage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" ¥ 50.00"
                            android:textColor="@color/dongdong2"
                            android:textSize="@dimen/dp12" />

                        <TextView
                            android:id="@+id/danwei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/箱/5瓶"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="#a8a8a8"
                            android:textSize="@dimen/dp12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_dd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_jian"
                        android:layout_width="@dimen/dp27"
                        android:layout_height="@dimen/dp27"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@mipmap/sousuo_jianshao"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:padding="1dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="0"
                        android:textColor="#a8a8a8"
                        android:textSize="12dp"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_jia"
                        android:layout_width="@dimen/dp27"
                        android:layout_height="@dimen/dp27"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@mipmap/sousuo_zengjia" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@id/dd"
        android:id="@+id/dd2"
        android:layout_alignParentLeft="true"
        android:layout_width="@dimen/dp61"
        android:layout_height="0dp"
        android:layout_gravity="center">

    </LinearLayout>
    <com.bm.chengshiyoutian.youlaiwang.view.MylistView
        android:id="@+id/lv"
        android:layout_toRightOf="@id/dd2"
        android:layout_below="@id/dd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:background="#fff"
        android:divider="@null">
    </com.bm.chengshiyoutian.youlaiwang.view.MylistView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="8dp"
        android:background="#dddddd"/>
</RelativeLayout>
