<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/rl_carList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:background="#fff"
        android:id="@+id/rl"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_line"
            android:layout_alignParentTop="true"
            android:background="#508a8a8a"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <CheckBox
            android:layout_marginLeft="15dp"
            android:button="@null"
            android:drawableLeft="@drawable/gouwu"
            android:id="@+id/cb"
            android:checked="true"
            android:text="全选"
            android:textSize="16sp"
            android:drawablePadding="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/delede"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/cb"
            android:drawableLeft="@mipmap/dizhi_shanchu"
            android:text="删除"
            android:drawablePadding="5dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/delede"
            android:id="@+id/heji"
            android:text="总计:"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#fa6801"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/heji"
            android:id="@+id/money_totle"
            android:text="0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:background="#fa6801"
            android:layout_alignTop="@id/txt_line"
            android:text="加入购物车"
            android:textColor="#fff"
            android:id="@+id/mBtn_totle"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>