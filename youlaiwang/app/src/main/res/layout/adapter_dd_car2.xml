<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="#fff">

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#fff">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            app:layout_widthPercent="63%"
            android:layout_marginLeft="5dp"
            android:id="@+id/rl11"
            android:layout_toRightOf="@id/mImg_goods"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/mTxt_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/mTxt_hot"
                android:layout_alignTop="@id/mTxt_hot"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/mTxt_new"
                android:gravity="center_vertical"
                android:text="￥ 100.00"
                android:textColor="#fb6800"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/mTxt_money2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/mTxt_hot"
                android:layout_alignTop="@id/mTxt_hot"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/mTxt_money"
                android:gravity="center_vertical"
                android:text="100.00"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/mTxt_danwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/mTxt_hot"
                android:layout_alignTop="@id/mTxt_hot"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/mTxt_money2"
                android:gravity="center_vertical"
                android:text="黄小米"
                android:textColor="#9d9d9d"
                android:textSize="10sp" />


        </android.support.percent.PercentRelativeLayout>






        <android.support.percent.PercentRelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"

            android:layout_toRightOf="@id/rl11"
            android:id="@+id/rl22"
            android:gravity="center"
            app:layout_heightPercent="100%"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/add"
                app:layout_widthPercent="25%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/zengjia" />

            <TextView
                app:layout_heightPercent="80%"
                android:id="@+id/mTxt_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/add"
                android:layout_alignTop="@id/add"
                android:layout_toLeftOf="@id/add"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textSize="12sp"
                android:paddingRight="10dp"
                android:text="0" />

            <ImageView
                app:layout_widthPercent="25%"
                android:id="@+id/reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/add"
                android:layout_alignTop="@id/add"
                android:layout_toLeftOf="@id/mTxt_number"
                android:src="@mipmap/jianshao" />
        </android.support.percent.PercentRelativeLayout>
    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>