<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0bb04a"
                >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/act_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="@string/gongyingshang"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_17"/>


        <EditText
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="6dp"
            android:background="@mipmap/ed_bt"
            android:hint="@string/input_gongyingshang_num"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/hint"
            android:textSize="@dimen/text_size_15"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_verify_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="3dp"
                    android:text="请填写正确的手机号"
                    android:textColor="@color/yello"
                    android:textSize="@dimen/text_size_13"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/gongyingshang_phone"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_17"/>

                <EditText
                    android:id="@+id/ed_psw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="6dp"
                    android:background="@mipmap/ed_bt"
                    android:hint="@string/input_gongyingshang_phone"
                    android:maxLength="11"
                    android:paddingLeft="10dp"
                    android:phoneNumber="true"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/hint"
                    android:textSize="@dimen/text_size_15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="3dp"
                    android:text="请填写正确的手机号"
                    android:textColor="@color/yello"
                    android:textSize="@dimen/text_size_13"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:text="供货商证件(必填)"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_17"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:text="(分别为:营业执照、生产许可证、质检证、以及流通证。)"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_12"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:id="@+id/rl_photo_view"
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="10dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_photo"
                            android:layout_width="100dp"
                            android:layout_height="90dp"
                            android:background="@mipmap/zhengjian_picture"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@mipmap/gray_square"
                            android:gravity="center_vertical"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_top"
                                android:background="@mipmap/picture"/>

                            <TextView
                                android:id="@+id/tv_photo_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="0张"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_size_12"/>
                        </LinearLayout>

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/iv_add_photo"
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:background="@mipmap/add_picture"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/bt_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/button"
                        android:text="下一步"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_17"/>
                </LinearLayout>

            </LinearLayout>

            <ListView
                android:id="@+id/lv_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:cacheColorHint="#00000000"
                android:divider="@color/green_bg"
                android:dividerHeight="1dp"
                android:fadingEdge="none"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none"
                android:visibility="gone"></ListView>
        </RelativeLayout>
    </LinearLayout>

    <include
        layout="@layout/select_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
