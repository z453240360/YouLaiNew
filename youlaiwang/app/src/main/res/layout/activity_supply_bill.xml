<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <include layout="@layout/act_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="供应商名称："
                android:textSize="16sp"
                android:textColor="@color/text_grey"
                />
            <TextView
                android:id="@+id/tv_supplier_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京市宣武区供应商"
                android:textColor="@color/text_grey"
                android:textSize="16sp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营业执照编号："
                android:textColor="@color/text_grey"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_business_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456781"
                android:textColor="@color/text_grey"
                android:textSize="16sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="供应商联系人："
                android:textColor="@color/text_grey"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_Supplier_persion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="老站"
                android:textColor="@color/text_grey"
                android:textSize="16sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="供应商联系电话："
                android:textSize="16sp"
                android:textColor="@color/text_grey"
                />
            <TextView
                android:id="@+id/tv_supplier_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13663113631"
                android:textColor="@color/text_grey"
                android:textSize="16sp"
                />
        </LinearLayout>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="30dp"
            android:background="@color/gray_three"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="票据"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="12sp"
        android:textColor="@color/orange"
        android:text="(必须上传本次所有相关票据及产品合格证)"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:id="@+id/rl_photo_view"
            android:layout_width="90dp"
            android:layout_height="68dp"
            android:layout_marginRight="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="@dimen/picture_width"
                android:layout_height="@dimen/picture_height"
                android:background="@mipmap/zhengjian_picture"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/gray_square"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:background="@mipmap/picture"/>

                <TextView
                    android:id="@+id/tv_photo_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="0张"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_add_photo"
            android:layout_width="90dp"
            android:layout_height="68dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/zhengshuicon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="点击上传"
                android:textColor="@color/orange"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/bt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/button"
        android:layout_marginTop="100dp"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        />
</RelativeLayout>
