<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">

        <ProgressBar
            android:id="@+id/pb"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        app:image_scale_type="fit_xy"
                        android:layout_width="match_parent"
                        android:layout_height="290dp"></com.youth.banner.Banner>

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:textColor="#333"
                        android:textSize="@dimen/dp17" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_miao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="描述 :"
                            android:textColor="#888"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/goods_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="描述 :"
                            android:textColor="#888"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="15dp"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp10"
                        android:background="#f2f2f2"></LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp34"
                        android:layout_marginLeft="@dimen/dp12"
                        android:gravity="center_vertical"
                        android:text="请选取 商品规格"
                        android:textColor="#666"
                        android:textSize="12dp" />

                    <com.bm.chengshiyoutian.youlaiwang.view.MylistView
                        android:id="@+id/lv"
                        android:divider="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp12">
                    </com.bm.chengshiyoutian.youlaiwang.view.MylistView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp10"
                        android:background="#f2f2f2">
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@id/tv_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="评价(0)"
                            android:textColor="#666"
                            android:textSize="12dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#666"
                            android:layout_weight="1"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv_duoduo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="更多"
                            android:drawablePadding="10dp"
                            android:drawableRight="@mipmap/lvjiantou"
                            android:textColor="@color/dongdong2"
                            android:textSize="12dp" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_you"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp10">

                        <ImageView
                            android:id="@+id/iv"
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:src="@drawable/xigua" />
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="测试名字"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp6"
                            android:textColor="#555"
                            android:textSize="14dp" />
                        <TextView
                            android:textColor="#999"
                            android:id="@+id/tv_time"
                            android:gravity="right|center_vertical"
                            android:layout_weight="1"
                            android:textSize="@dimen/dp12"
                            android:layout_width="0dp"
                            android:text="2023-12-12"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                    <TextView
                        android:text="123123"     android:id="@+id/tv_content"
                        android:textColor="#555"
                        android:layout_marginLeft="@dimen/dp10"
                        android:textSize="@dimen/dp14"
                        android:layout_marginTop="@dimen/dp6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_pingjia"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_weight="1"
                    android:background="#f2f2f2"
                    android:gravity="center"
                    android:text="暂无评价"
                    android:textColor="#666"></TextView>

            </LinearLayout>


        </ScrollView>

    </RelativeLayout>


</LinearLayout>
