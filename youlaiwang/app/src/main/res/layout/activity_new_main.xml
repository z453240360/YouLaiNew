<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    >



    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RadioGroup

            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:tag="0"
                android:button="@null"
                android:drawablePadding="@dimen/dp4"
                android:drawableTop="@drawable/rb1"
                android:gravity="center"
                android:text="首页"
                android:textColor="#888"
                android:textSize="@dimen/dp9" />



            <RadioButton
                android:tag="1"
                android:id="@+id/rb3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="@dimen/dp4"
                android:drawableTop="@drawable/rb3"
                android:gravity="center"
                android:text="商品"
                android:textColor="#888"
                android:textSize="@dimen/dp9" />

            <RadioButton
                android:visibility="visible"
                android:id="@+id/rb2"
                android:tag="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="@dimen/dp4"
                android:drawableTop="@drawable/rb2"
                android:gravity="center"
                android:text="上周采购"
                android:textColor="#888"
                android:textSize="@dimen/dp9" />

            <RadioButton
                android:tag="3"
                android:id="@+id/rb4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="@dimen/dp4"
                android:drawableTop="@drawable/rb4"
                android:gravity="center"
                android:text="购物车"
                android:textColor="#888"
                android:textSize="@dimen/dp9" />
            <RadioButton
                android:tag="4"
                android:id="@+id/rb5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="@dimen/dp4"
                android:drawableTop="@drawable/rb5"
                android:gravity="center"
                android:text="我的"
                android:textColor="#888"
                android:textSize="@dimen/dp9" />
        </RadioGroup>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="invisible"
                android:layout_weight="1"
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:background="@drawable/tv_bad"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="0"
                android:textColor="#fff"
                android:textSize="@dimen/dp8" />
            <TextView
                android:visibility="invisible"
                android:layout_weight="1"
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"

                android:background="@drawable/tv_bad"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="0"
                android:textColor="#fff"
                android:textSize="@dimen/dp8" />
            <TextView
                android:visibility="invisible"
                android:layout_weight="1"
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:background="@drawable/tv_bad"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="0"
                android:textColor="#fff"
                android:textSize="@dimen/dp8" />

            <TextView
                android:visibility="invisible"
                android:layout_weight="1"
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:background="@drawable/tv_bad"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="0"
                android:textColor="#fff"
                android:textSize="@dimen/dp8" />

            <TextView
                android:visibility="invisible"
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:background="@drawable/tv_bad"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="0"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="@dimen/dp8" />



            <TextView
                android:visibility="invisible"
                android:id="@+id/iv_gouwuche"
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:background="@drawable/tv_bad"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="0"
                android:textColor="#fff"
                android:textSize="@dimen/dp8" />

            <TextView
                android:visibility="invisible"
                android:layout_weight="1.4"
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:background="@drawable/tv_bad"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="0"
                android:textColor="#fff"
                android:textSize="@dimen/dp8" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_line"
        android:layout_above="@id/ll"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#308a8a8a"/>
    <LinearLayout
        android:id="@+id/tb"
        android:layout_alignParentTop="true"
        android:layout_above="@id/ll_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

</RelativeLayout>
