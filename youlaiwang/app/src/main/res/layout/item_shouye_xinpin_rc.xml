<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:background="#fff"
    android:layout_marginLeft="5dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="5dp"
    >

    <LinearLayout
        android:background="@drawable/yuanjiao_kuang"
        android:layout_width="match_parent"
        app:layout_marginLeftPercent="0%"
        app:layout_widthPercent="100%"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp144"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/xigua" />


        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv1"
            android:layout_width="@dimen/dp125"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp2"
            android:layout_marginTop="@dimen/dp2"
            android:text="$102.00"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#333"
            android:textSize="@dimen/dp14" />

        <LinearLayout

            android:layout_marginLeft="5dp"
            android:layout_width="@dimen/dp125"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginTop="@dimen/dp2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$102.00"
                android:textColor="@color/dongdong2"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ä¸ª/KG"
                android:textColor="#555"
                android:textSize="12dp" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:visibility="invisible"
                />
            <ImageView
                android:visibility="invisible"
                android:id="@+id/gouwuche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp10"

                android:src="@drawable/sahngp_gouwuche" />
        </LinearLayout>

    </LinearLayout>
</android.support.percent.PercentRelativeLayout>