<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#000"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp180">

            </com.youth.banner.Banner>
        </RelativeLayout>

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp14"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_caigou"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/home_zhinengcaigou"
                    android:gravity="center"
                    android:text="智能采购"
                    android:textColor="#666"
                    android:textSize="@dimen/dp14" />
                <TextView
                    android:id="@+id/tv_gongyingshang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/home_bendigongyingshang"
                    android:gravity="center"
                    android:text="本地供应商"
                    android:textColor="#666"
                    android:textSize="@dimen/dp14" />

                <TextView
                    android:id="@+id/tv_shishang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/home_shishangzixun"
                    android:gravity="center"
                    android:text="食尚咨询"
                    android:textColor="#666"
                    android:textSize="@dimen/dp14" />

                <TextView
                    android:id="@+id/tv_suopiao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/home_suozhengsuopiao"
                    android:gravity="center"
                    android:text="索证索票"
                    android:textColor="#666"
                    android:textSize="@dimen/dp14" />



                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_zixun"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/shishang_zixun"
                    android:gravity="center"
                    android:text="行业资讯"
                    android:textColor="#666"
                    android:textSize="@dimen/dp14" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_you"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="废弃油"
                    android:textColor="#666"
                    android:textSize="@dimen/dp14" />

                <TextView
                    android:id="@+id/tv_huiyuan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/home_huiyuan"
                    android:gravity="center"
                    android:text="PLUS会员"
                    android:textColor="#666"
                    android:textSize="@dimen/dp14" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="13dp"
                android:background="#808a8a8a"
                android:layout_height="0.5dp" />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp9"
                android:orientation="horizontal">


                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_gonggao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/home_zhengfugonggao"
                    android:gravity="center"
                    android:textColor="#666"
                    android:textSize="@dimen/dp14" />

                <TextView
                    android:id="@+id/tv_gonggao2"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="政府公告"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@null">
        </LinearLayout>

        <LinearLayout
            android:background="@null"
            android:id="@+id/ll_imgs"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:id="@+id/img_tuijianyoujiang"
                android:src="@mipmap/home_tuijianyouli"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="180dp" />

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"
                    android:id="@+id/meiweixinpin"
                    android:layout_marginBottom="5dp"
                    android:src="@mipmap/home_meiweixinpin"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp" />

                <ImageView
                    android:layout_marginRight="5dp"
                    android:id="@+id/jinpairexiao"
                    android:scaleType="fitXY"
                    android:layout_below="@id/meiweixinpin"
                    android:src="@mipmap/home_jinpairexiao"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@null">
        </LinearLayout>



        <LinearLayout
            android:background="@drawable/yuanjiao_kuang2"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:background="#ccc" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTop="@mipmap/home_xinpin"
                android:gravity="center"
                android:background="#fff"
                android:drawablePadding="@dimen/dp4"
                android:text="新鲜上市，天天换新"
                android:textColor="#9c9c9c"
                android:textSize="12dp" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="#ccc" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl1"
            android:background="@mipmap/xinping2"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="140dp">

            <Button
                android:id="@+id/mBtn_gengduo1"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/chakangengduo"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc"
            android:background="#000"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp10"
            android:background="@null"></LinearLayout>

        <LinearLayout
            android:background="@drawable/yuanjiao_kuang2"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#ccc"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTop="@mipmap/home_tehui"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp4"
                android:layout_marginRight="@dimen/dp4"
                android:drawablePadding="@dimen/dp4"
                android:text="前所未有，大力折扣"
                android:textColor="#9c9c9c"
                android:textSize="12dp" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="#ccc" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/nongyao"
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <Button
                android:id="@+id/mBtn_gengduo2"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/chakangengduo"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
