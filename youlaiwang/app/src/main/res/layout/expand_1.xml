<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:background="#00ffffff"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>


    <RelativeLayout

        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:textColor="#555555"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:id="@+id/postMoney"
            android:text="邮费"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="#555555"
            android:gravity="center_vertical"
            android:id="@+id/minPay"
            android:textSize="12sp"
            android:layout_toLeftOf="@id/postMoney"
            android:text="满100免邮费"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <ImageView
            android:src="@drawable/gouwu"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:id="@+id/isSelectedAll"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:drawableLeft="@mipmap/dingdanxiangqing_dianpu"
            android:textColor="#555555"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:text="店铺名称"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:id="@+id/shopName"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@id/isSelectedAll"
            android:layout_toLeftOf="@id/minPay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />



    </RelativeLayout>
</LinearLayout>