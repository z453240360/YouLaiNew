<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<include layout="@layout/act_title"></include>
    <RelativeLayout
        android:background="@color/gray_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
           android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前定位城市"
           android:paddingBottom="10dp"
            android:textColor="@color/black_simple"
            android:textSize="14sp"
            />
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@mipmap/lvcha"
          android:layout_marginTop="10dp"
          android:layout_alignParentRight="true"
          android:layout_marginRight="10dp"
          />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:background="@color/gray_background"
        >
        <TextView
            android:id="@+id/tv_current_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="武汉"
            android:padding="10dp"
            android:textColor="@color/menu_view"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_margin="10dp"

            android:layout_toRightOf="@id/tv_current_city"
            android:background="@mipmap/lvgou"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="15dp" >
    <!--热门城市-->
    <RelativeLayout
        android:id="@+id/rl_hot"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="@color/gray_background"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门城市"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingBottom="10dp"
            android:textSize="14sp"
            android:textColor="@color/black_simple"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/rl_hot"
        android:id="@+id/ll_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"

        >
        <TextView
            android:id="@+id/t1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:background="@color/gray_background"
            android:text="北京"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black_simple"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/t2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/gray_background"
            android:text="上海"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black_simple"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/t3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/gray_background"
            android:text="广州"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black_simple"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/t4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/gray_background"
            android:text="深圳"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black_simple"
            android:textSize="16sp"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ll_hot"
        android:background="@android:color/white"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:dividerHeight="1dp"
        android:divider="@color/gray_background"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

        <com.bm.chengshiyoutian.youlaiwang.oldall.oldview.view.SideBar
            android:id="@+id/sidebar"
            android:layout_width="30dp"
            android:layout_alignParentRight="true"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center" />

    </RelativeLayout>
</LinearLayout>
