<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="#fff"
    android:layout_height="90dp"
    android:gravity="center_vertical">

    <CheckBox
        android:layout_centerVertical="true"
        android:id="@+id/checkBox"
        android:button="@null"
        android:background="@drawable/gouwu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:textColor="#9c9c9c"
        android:id="@+id/money"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:text="小计：100元" />

    <ImageView
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:id="@+id/mImg_cover"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/checkBox"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="#555555"
        android:id="@+id/name"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mImg_cover"
        android:ellipsize="end"
        android:lines="1"
        android:layout_marginRight="10dp"
        android:text="商店名称" />


    <TextView
        android:layout_marginTop="8dp"
        android:textColor="#9c9c9c"
        android:id="@+id/jiage"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_below="@id/name"
        android:text="价格" />

    <TextView
        android:layout_marginTop="8dp"
        android:textColor="#9c9c9c"
        android:id="@+id/danwei"
        android:textSize="12sp"
        android:layout_toRightOf="@id/jiage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:text="单位" />


    <ImageView
        android:layout_alignParentBottom="true"
        android:textColor="#9c9c9c"
        android:id="@+id/mImg_add"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@id/jiage"
        android:layout_below="@id/jiage"
        android:src="@mipmap/zengjia" />

    <TextView
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textColor="#555555"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/mTxt_test"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/jiage"
        android:layout_toRightOf="@id/mImg_add"
        android:text="100 " />

    <ImageView
        android:layout_alignParentBottom="true"
        android:id="@+id/mImg_reduce"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/jiage"
        android:layout_toRightOf="@id/mTxt_test"
        android:src="@mipmap/jianshao" />



</RelativeLayout>